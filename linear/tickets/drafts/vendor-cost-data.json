  "cost_unit_scopes": {
    "primary": [
      {
        "enum": "PER_INVESTOR",
        "definition": "Cost scales with number of investors",
        "use_case": "KYC/AML, tax forms, investor communications",
        "example": "$5 per investor for KYC/AML"
      },
      {
        "enum": "PER_ASSET",
        "definition": "Cost scales with number of properties/assets",
        "use_case": "Property management, appraisals, insurance",
        "example": "$2,500 per property for appraisal"
      },
      {
        "enum": "PER_OFFERING",
        "definition": "Fixed cost per offering regardless of scale",
        "use_case": "Reg A+ filing, legal structuring, audit setup",
        "example": "$50,000 for Reg A+ filing"
      },
      {
        "enum": "PER_PRIMARY_OFFERING",
        "definition": "Cost per primary (initial) offering",
        "use_case": "Initial Reg A+ program setup, TA onboarding",
        "example": "$75,000 primary setup"
      },
      {
        "enum": "PER_SECONDARY_OFFERING",
        "definition": "Cost per secondary/follow-on offering",
        "use_case": "Supplementary offering statement, incremental marketing",
        "example": "$25,000 per secondary raise"
      },
      {
        "enum": "PER_TRANSACTION",
        "definition": "Cost per individual transaction",
        "use_case": "ACH transfers, DocuSign envelopes, escrow",
        "example": "$0.25 per ACH transfer"
      },
      {
        "enum": "PER_SMB",
        "definition": "Cost per Small/Medium Business partner",
        "use_case": "SMB onboarding, program management",
        "example": "$10,000 per SMB onboarding"
      },
      {
        "enum": "PER_PLATFORM",
        "definition": "Platform-wide fixed cost",
        "use_case": "Platform infrastructure, compliance systems",
        "example": "$100,000 annual platform license"
      }
    ],
    "secondary": [
      {
        "enum": "PER_API",
        "definition": "Cost per API call to external service",
        "use_case": "Data services, credit checks",
        "example": "$0.10 per API call"
      },
      {
        "enum": "PER_YEAR",
        "definition": "Annual recurring cost",
        "use_case": "Annual audits, compliance reporting",
        "example": "$25,000 annual audit fee"
      },
      {
        "enum": "PER_FILING",
        "definition": "Cost per regulatory filing",
        "use_case": "SEC filings, state registrations",
        "example": "$2,500 per SEC filing"
      }
    ],
    "composite": [
      {
        "enum": "PER_INVESTOR_PER_YEAR",
        "definition": "Annual cost per investor",
        "use_case": "Ongoing investor management",
        "example": "$50 per investor per year"
      },
      {
        "enum": "PER_ASSET_PER_YEAR",
        "definition": "Annual cost per asset",
        "use_case": "Property management, insurance",
        "example": "$1,000 per asset per year"
      },
      {
        "enum": "PER_OFFERING_PER_YEAR",
        "definition": "Annual cost per offering",
        "use_case": "Ongoing compliance, reporting",
        "example": "$15,000 per offering per year"
      },
      {
        "enum": "PER_PRIMARY_OFFERING_PER_YEAR",
        "definition": "Annual cost per primary raise",
        "use_case": "Ongoing Reg A+ compliance for primary program",
        "example": "$20,000 per year"
      },
      {
        "enum": "PER_SECONDARY_OFFERING_PER_YEAR",
        "definition": "Annual cost per secondary raise",
        "use_case": "Ongoing compliance for secondary offerings",
        "example": "$10,000 per year"
      },
      {
        "enum": "PER_PLATFORM_PER_YEAR",
        "definition": "Annual cost per platform",
        "use_case": "Core platform licensing and infrastructure",
        "example": "$120,000 per year"
      }
    ],
    "composite_one_time": [
      {
        "enum": "PER_INVESTOR_ONE_TIME",
        "definition": "One-time cost per investor",
        "use_case": "Initial KYC bundle",
        "example": "$7 per investor one-time"
      },
      {
        "enum": "PER_ASSET_ONE_TIME",
        "definition": "One-time cost per asset",
        "use_case": "Initial appraisal/survey",
        "example": "$3,000 per asset one-time"
      },
      {
        "enum": "PER_OFFERING_ONE_TIME",
        "definition": "One-time cost per offering",
        "use_case": "Offering docs, EDGAR setup",
        "example": "$50,000 one-time"
      },
      {
        "enum": "PER_PRIMARY_OFFERING_ONE_TIME",
        "definition": "One-time cost per primary raise",
        "use_case": "Primary setup (TA onboarding)",
        "example": "$75,000 one-time"
      },
      {
        "enum": "PER_SECONDARY_OFFERING_ONE_TIME",
        "definition": "One-time cost per secondary raise",
        "use_case": "Follow-on offering statement",
        "example": "$25,000 one-time"
      },
      {
        "enum": "PER_PLATFORM_ONE_TIME",
        "definition": "One-time cost per platform",
        "use_case": "Initial platform implementation",
        "example": "$250,000 one-time"
      }
    ]
  },
